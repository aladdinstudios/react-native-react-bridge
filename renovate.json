{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:monthly",
    ":preserveSemverRanges",
    ":automergeMinor",
    ":maintainLockFilesMonthly"
  ],
  "timezone": "Asia/Tokyo",
  "configMigration": true,
  "packageRules": [
    {
      "matchPackageNames": ["react", "react-dom", "react-native"],
      "automerge": false
    }
  ]
}
