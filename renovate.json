{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:monthly",
    ":pinOnlyDevDependencies"
  ],
  "timezone": "Asia/Tokyo",
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "react",
        "react-dom",
        "react-native",
        "metro-react-native-babel-preset"
      ],
      "automerge": false
    }
  ]
}
